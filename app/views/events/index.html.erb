<h1>All Events</h1>
<% if user_signed_in? %>
  <%= link_to 'My Ticket Bookings', my_bookings_path %><br>
  <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to sign out?' } %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %>
<% end %>
<% @events.each do |event| %>
  <h3><%= event.name %></h3>
  <p><%= event.description %></p>
  <p>Location: <%= event.location %></p>
  <p>Date: <%= event.date %></p>
  <p>Tickets Left: <%= event.remaining_tickets %></p>
  <% if user_signed_in? %>
    <%= link_to 'Book Tickets', new_event_ticket_booking_path(event) %><br>
  <% end %>
<% end %>

